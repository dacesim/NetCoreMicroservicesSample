{
  "ReRoutes": [
    {
      "DownstreamPathTemplate": "/users",
      "DownstreamScheme": "http",
      "UpstreamPathTemplate": "/users",
      "UpstreamHttpMethod": [ "Post" ],
      "ServiceName": "users-service",
      "FileCacheOptions": { "TtlSeconds": 15 },
      "LoadBalancerOptions": {
        "Type": "LeastConnection"
      }
    },
    {
      "DownstreamPathTemplate": "/ping",
      "DownstreamScheme": "http",
      "UpstreamPathTemplate": "/users/ping",
      "UpstreamHttpMethod": [ "Get" ],
      "ServiceName": "users-service",
      "FileCacheOptions": { "TtlSeconds": 15 },
      "LoadBalancerOptions": {
        "Type": "LeastConnection"
      }
    },
    {
      "DownstreamPathTemplate": "/ping",
      "DownstreamScheme": "http",
      "UpstreamPathTemplate": "/messages/ping",
      "UpstreamHttpMethod": [ "Get" ],
      "ServiceName": "messages-service",
      "FileCacheOptions": { "TtlSeconds": 15 },
      "LoadBalancerOptions": {
        "Type": "LeastConnection"
      }
    },
    {
      "DownstreamPathTemplate": "/users/{userId}/messages",
      "DownstreamScheme": "http",
      "UpstreamPathTemplate": "/users/{userId}/messages",
      "UpstreamHttpMethod": [ "Get" ],
      "ServiceName": "messages-service",
      "FileCacheOptions": { "TtlSeconds": 15 },
      "LoadBalancerOptions": {
        "Type": "LeastConnection"
      }
    },
    {
      "DownstreamPathTemplate": "/users/{userId}/messages",
      "DownstreamScheme": "http",
      "UpstreamPathTemplate": "/users/{userId}/messages",
      "UpstreamHttpMethod": [ "Post" ],
      "ServiceName": "messages-service",
      "FileCacheOptions": { "TtlSeconds": 15 },
      "LoadBalancerOptions": {
        "Type": "LeastConnection"
      }
    },
    {
      "DownstreamPathTemplate": "/api/graphql",
      "DownstreamScheme": "http",
      "UpstreamPathTemplate": "/graphql",
      "Priority": 1,
      "UpstreamHttpMethod": [ "Post" ],
      "ServiceName": "graphql-service",
      "FileCacheOptions": { "TtlSeconds": 15 },
      "LoadBalancerOptions": {
        "Type": "LeastConnection"
      }
    }
  ],

  "GlobalConfiguration": {
    "RequestIdKey": "OcRequestId",
    "UseServiceDiscovery": true,
    "DownstreamScheme": "http",
    "ServiceDiscoveryProvider": {
      "Type": "Consul",
      "Host": "consul",
      "Port": 8500
    }
  },
  "RateLimitOptions": {
    "ClientWhitelist": [],
    "EnableRateLimiting": true,
    "Period": "1s",
    "HttpStatusCode": 428,
    "QuotaExceededMessage": "Too many requests...",
    "PeriodTimespan": 1,
    "Limit": 1
  },

  "HttpHandlerOptions": {
    "UseTracing": true
  },
  "LoadBalancerOptions": {
    "Type": "LeastConnection",
    "Key": null,
    "Expiry": 0
  },
  "QoSOptions": {
    "ExceptionsAllowedBeforeBreaking": 3,
    "DurationOfBreak": 10000,
    "TimeoutValue": 5000
  }
}